<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="260dp"
    android:layout_gravity="center"
    android:background="@drawable/plain_white_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:text='\"Extraado\" would Like to Send \nYou Notifications'
        android:textColor="#000000"
        android:fontFamily="@font/poppinsbold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Notifications may include alerts, \nsounds and icon badges. These \ncan be configured in settings."
        android:textColor="#000000"
        android:fontFamily="@font/poppinslight"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b8b7b7"
        android:layout_marginTop="30dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/div"
            android:gravity="center"
            android:id="@+id/dontallow"
            android:background="#ffffff"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't Allow"
                android:textColor="#000000"
                android:fontFamily="@font/poppinslight"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:id="@+id/div"
            android:background="#b8b7b7"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/div"
            android:gravity="center"
            android:id="@+id/allow"
            android:background="#ffffff"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allow"
                android:textColor="#000000"
                android:fontFamily="@font/poppinslight"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>