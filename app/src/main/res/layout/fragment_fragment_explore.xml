                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_favorite_white"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
