<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context=".FragmentExplore">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/searchrel"
        android:orientation="horizontal">
        <AutoCompleteTextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/lay"
            android:drawableLeft="@drawable/ic_search"
            android:hint="Search for services..."
            android:textColorHint="#000000"
            android:textSize="10dp"
            android:textColor="#000000"
            android:fontFamily="@font/poppinslight"
            android:id="@+id/autocomplete"
            android:background="@drawable/search_layout"/>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:id="@+id/lay"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/blue_layout2">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_swap"/>
        </LinearLayout>

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none"
        android:id="@+id/hsv"
        android:layout_below="@+id/searchrel"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:id="@+id/innerLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:background="@drawable/blue_layout">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/picall"
                    android:layout_centerInParent="true"
                    android:src="@drawable/all"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textSize="10dp"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/picall"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/poppinslight"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/plain_white_layout">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/salon"
                    android:layout_centerInParent="true"
                    android:src="@drawable/salon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hair Salon"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_below="@+id/salon"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/poppinslight"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/plain_white_layout">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/barber"
                    android:layout_centerInParent="true"
                    android:src="@drawable/barber"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Barber"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_below="@+id/barber"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/poppinslight"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/plain_white_layout">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/nail"
                    android:layout_centerInParent="true"
                    android:src="@drawable/nail"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nail Salon"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_below="@+id/nail"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/poppinslight"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/plain_white_layout">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/salon2"
                    android:layout_centerInParent="true"
                    android:src="@drawable/salon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salon 2"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_below="@+id/salon2"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/poppinslight"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/plain_white_layout">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/barber2"
                    android:layout_centerInParent="true"
                    android:src="@drawable/barber"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Barber"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_below="@+id/barber2"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/poppinslight"/>
            </RelativeLayout>



        </LinearLayout>
    </HorizontalScrollView>







