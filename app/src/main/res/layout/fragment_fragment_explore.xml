                        android:layout_toLeftOf="@+id/star"
                        android:layout_marginRight="10dp"
                        android:id="@+id/rating"
                        android:textSize="12dp"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppinsregular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(24)"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/rating"
                        android:textSize="12dp"
                        android:fontFamily="@font/poppinsregular"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/relPlace"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yaba Left, Lagos Street"
                        android:drawableLeft="@drawable/ic_pin"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textSize="10dp"
                        android:fontFamily="@font/poppinsregular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N700"
                        android:id="@+id/price"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="12dp"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppinsregular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="from"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/price"
                        android:textSize="10dp"
                        android:fontFamily="@font/poppinsregular"/>
                </RelativeLayout>

            </RelativeLayout>










            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/gray_layout">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_height="120dp"
                    android:layout_width="match_parent"
                    app:shapeAppearanceOverlay="@style/roundedImageView"
                    app:srcCompat="@drawable/baber"
                    android:id="@+id/shapedImage"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open (Closes at 10pm)"
                        android:background="@drawable/plain_white_layout"
                        android:layout_alignParentLeft="true"
                        android:textSize="10dp"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppinslight"
                        android:paddingLeft="10dp"
