<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logobackground"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select services for:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppinsregular"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/service"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_layout"
                android:layout_marginTop="20dp"
                android:id="@+id/women"
                android:text="Women"
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinslight"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/black_layout"
                android:layout_marginTop="5dp"
                android:id="@+id/men"
                android:text="Men"
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinslight"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_layout"
                android:layout_marginTop="5dp"
                android:id="@+id/unisex"
                android:layout_marginBottom="10dp"
                android:text="Unisex"
                android:textSize="10dp"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinslight"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>