<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".ResetPassword">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back"
                android:padding="10dp"
                android:background="@drawable/plain_white_layout">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back"/>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset password"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppinsregular"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter your email address to request a\nPassword reset "
                android:textSize="8dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppinsbold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="10dp"
                android:hint="Email"
                android:id="@+id/edtEmail"
                android:textSize="8dp"
                android:textColorHint="#7c7c7c"
                android:textColor="#7c7c7c"
                android:fontFamily="@font/poppinslight"
                android:background="@drawable/edittext_layout"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/blue_layout"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/reset"
                android:stateListAnimator="@null"
                android:text="Reset password"
                android:textStyle="bold"
                android:textSize="8dp"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinslight"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/white_layout"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/notnow"
                android:stateListAnimator="@null"
                android:text="Cancel"
                android:textSize="8dp"
                android:textColor="#017691"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinslight"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>